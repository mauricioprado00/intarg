				<sortable>true</sortable>
			</action>
			-->
			<action named_args="true" method="addColumn">
				<title>Agencia</title>
				<name>nombre_agencia</name>
				<index>nombre_agencia</index>
				<width>150</width>
				<align>left</align>
				<sortable>true</sortable>
			</action>
			<!--
			<action named_args="true" method="addColumn">	
				<title>Data</title>
